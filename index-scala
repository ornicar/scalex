#!/usr/bin/env bash

scala210source=https://github.com/scala/scala/archive/2.10.2.zip
scala210target=scala-2.10.2
tmpdir=/tmp

if [ ! -d $tmpdir/$scala210target ]; then
  wget $scala210source -O $tmpdir/$scala210target.zip
  unzip $tmpdir/$scala210target.zip
fi

./scalex index \
  -input-dir $tmpdir/$scala210target/src/library/scala \
  -output-file target/scala-library_2.10.2.scalex \
  -bootclasspath /usr/lib/jvm/java-7-openjdk/jre/lib/resources.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/rt.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/sunrsasign.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/jsse.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/jce.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/charsets.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/netx.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/plugin.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/rhino.jar:/usr/lib/jvm/java-7-openjdk/jre/lib/jfr.jar:/usr/lib/jvm/java-7-openjdk/jre/classes:/home/thib/.ivy2/cache/org.scala-lang/scala-library/jars/scala-library-2.11.0-M3.jar -classpath /home/thib/.ivy2/cache/org.scala-lang/scala-compiler/jars/scala-compiler-2.11.0-M3.jar:/home/thib/.ivy2/cache/org.scala-lang/scala-reflect/jars/scala-reflect-2.11.0-M3.jar:/home/thib/.ivy2/cache/com.typesafe/config/bundles/config-1.0.1.jar:/home/thib/.ivy2/cache/com.github.ornicar/scalalib_2.10/jars/scalalib_2.10-3.3.jar:/home/thib/.ivy2/cache/org.scalaz/scalaz-core_2.10/bundles/scalaz-core_2.10-7.0.0.jar:/home/thib/.ivy2/cache/org.specs2/specs2_2.10/jars/specs2_2.10-1.14.jar:/home/thib/.ivy2/cache/org.specs2/specs2-scalaz-core_2.10/jars/specs2-scalaz-core_2.10-7.0.0.jar:/home/thib/.ivy2/cache/org.specs2/specs2-scalaz-concurrent_2.10/jars/specs2-scalaz-concurrent_2.10-7.0.0.jar:/home/thib/.ivy2/cache/org.specs2/scalaz-effect_2.10/jars/scalaz-effect_2.10-7.0.0.jar:/home/thib/.ivy2/cache/org.specs2/scalaz-core_2.10/jars/scalaz-core_2.10-7.0.0.jar:/home/thib/.ivy2/cache/joda-time/joda-time/jars/joda-time-2.1.jar:/home/thib/.ivy2/cache/org.joda/joda-convert/jars/joda-convert-1.2.jar:/home/thib/.ivy2/cache/org.typelevel/scalaz-contrib-210_2.10/jars/scalaz-contrib-210_2.10-0.1.4.jar:/home/thib/.ivy2/local/org.scala-tools.sbinary/sbinary_2.10/0.4.1/jars/sbinary_2.10.jar:/home/thib/.ivy2/cache/com.github.scopt/scopt_2.10/jars/scopt_2.10-3.0.0.jar
